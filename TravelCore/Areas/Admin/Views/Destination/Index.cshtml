@using EntityLayer.Concrete
@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">Tur Rotaları</h1>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Şehir</th>
                <th>Fiyat</th>
                <th>Kapasite</th>
                <th>Sitede Gör</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationID</td>
                    <td>@item.City</td>
                    <td>@item.Price</td>
                    <td>@item.Capacity</td>
                    <td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info btn-block">Sitede Gör</a></td>
                    <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger btn-block">Sil</a></td>
                    <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success btn-block">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="/Admin/Destination/AddDestination" class="btn btn-outline-primary btn-block mt-3">Yeni Tur Rotası</a>
