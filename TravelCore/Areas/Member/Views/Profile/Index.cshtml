@model DTOLayer.AppUserDTOs.AppUserUpdateDTOs

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1 style="text-align: center;">PROFİL DÜZENLEME SAYFASI</h1>

<!-- Profil Resmi -->
<div style="display: flex; justify-content: center; margin-bottom: 20px;">
    <div style="width: 150px; height: 150px; border-radius: 50%; overflow: hidden; border: 2px solid #000;">
        <img src="@Model.imageurl" style="width: 100%; height: 100%; object-fit: cover;" alt="Resim">
    </div>
</div>

<!-- Hata Mesajları -->
@if (!ViewData.ModelState.IsValid)
{
    <ul style="color: red;">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <li>@error.ErrorMessage</li>
        }
    </ul>
}

<!-- Profil Bilgileri Formu -->
<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız")
    <input type="text" asp-for="name" class="form-control" />
    <span asp-validation-for="name" class="text-danger"></span>
    <br />

    @Html.Label("Soyadınız")
    <input type="text" asp-for="surname" class="form-control" />
    <span asp-validation-for="surname" class="text-danger"></span>
    <br />

    @Html.Label("Mail Adresiniz")
    <input type="email" asp-for="mail" class="form-control" />
    <span asp-validation-for="mail" class="text-danger"></span>
    <br />

    @Html.Label("Eski Şifreniz")
    <input type="password" asp-for="oldPassword" class="form-control" />
    <span asp-validation-for="oldPassword" class="text-danger"></span>
    <br />

    @Html.Label("Yeni Şifreniz")
    <input type="password" asp-for="password" class="form-control" />
    <span asp-validation-for="password" class="text-danger"></span>
    <br />

    @Html.Label("Yeni Şifre Tekrar")
    <input type="password" asp-for="confirmpassword" class="form-control" />
    <span asp-validation-for="confirmpassword" class="text-danger"></span>
    <br />

    @Html.Label("Telefon Numarası")
    <input type="text" asp-for="phonenumber" class="form-control" />
    <span asp-validation-for="phonenumber" class="text-danger"></span>
    <br />

    @Html.Label("Resim Seçin")
    <input type="file" asp-for="Image" accept=".jpeg, .jpg, .png" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
    <br />

    <button class="btn btn-primary">Bilgilerimi Güncelle</button>
</form>

